{
    "name": "my-finances",
    "description": "Budget management application",
    "author": "Vladimir Maximov",
    "version": "1.0.0",
    "license": "ISC",
    "main": "build/main.js",
    "scripts": {
        "build": "webpack --config ./webpack.config.js",
        "watch": "webpack --config ./webpack.config.js --watch",
        "start": "npm run build && electron ./build/main.js",
        "start:dev": "npm-run-all --parallel watch start",
        "dist:mac": "npm run build && electron-builder --mac --arm64",
        "dist:win": "npm run build && electron-builder --win --x64",
        "dist:linux": "npm run build && electron-builder --linux --x64"
    },
    "devDependencies": {
        "@types/knex": "^0.16.1",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "css-loader": "^7.1.2",
        "electron": "^33.1.0",
        "electron-builder": "^25.1.8",
        "html-webpack-plugin": "^5.6.3",
        "npm-run-all": "^4.1.5",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.1",
        "tsconfig-paths-webpack-plugin": "^4.1.0",
        "typescript": "^5.6.3",
        "webpack": "^5.96.1",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "knex": "^3.1.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "sqlite3": "^5.1.7"
    }
}
